{
  "lock": "./deno.lock",
  "test": {
    "files": { "exclude": ["npm/"] }
  },
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "udd": "deno run -r --allow-read=. --allow-write=. --allow-net https://deno.land/x/udd/main.ts test_deps.ts && deno task lock",
    "lock": "deno cache --lock=deno.lock --lock-write test_deps.ts",
    "all": "deno task lint && deno task fmt && deno task udd",
    "build:npm": "deno run -A tasks/build_npm.ts"
  }
}
